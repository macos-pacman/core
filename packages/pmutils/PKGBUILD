# Maintainer: zhiayang <zhiayang@nowhere>

pkgname=pmutils
pkgver=0.4.12
pkgrel=1
pkgdesc="Repository management scripts for macos-pacman"
url="https://github.com/macos-pacman/pmutils"
license=('Apache')
arch=('any')
depends=('python' 'python-requests' 'python-click' 'python-pyzstd' 'python-bracex')
makedepends=('python-build' 'python-installer')
_commit='d3e5be49205a0b2b6ea3a35e18475ef40cea0716'
source=("git+https://github.com/macos-pacman/pmutils.git#commit=${_commit}")
sha512sums=('SKIP')

build() {
  cd pmutils
  find . -iname "*.whl" -print -delete
  python -m build --wheel --no-isolation
}

package() {
  cd pmutils
  python -m installer --destdir="$pkgdir" dist/*.whl
}
