# Maintainer: zhiayang <zhiayang@nowhere>

pkgname=pmutils
pkgver=0.5.1
pkgrel=1
pkgdesc="Repository management scripts for macos-pacman"
url="https://github.com/macos-pacman/pmutils"
license=('Apache')
arch=('any')
pkgrel+=".1"
depends=('sshpass'
         'python'
         'python-requests'
         'python-aiohttp'
         'python-pyalpm'
         'python-tqdm'
         'python-click'
         'python-pyzstd'
         'python-stream-zip'
         'python-stream-unzip'
         )
makedepends=('python-build' 'python-installer')
_commit='c5383de9b42502098cc5218b766d0b2ed374be9a'
source=("git+https://github.com/macos-pacman/pmutils.git#commit=${_commit}")
sha512sums=('SKIP')

build() {
  cd pmutils
  find . -iname "*.whl" -print -delete
  python -m build --wheel --no-isolation
}

package() {
  cd pmutils
  python -m installer --destdir="$pkgdir" dist/*.whl
}
