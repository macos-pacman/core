pkgver=23.1.1
pkgrel=1
pkgdesc="An open-source implementation of the OpenGL specification"
url="https://www.mesa3d.org/"
arch=('x86_64' 'arm64')
license=('custom')
makedepends=(
  'clang'
  'bison>2.3'
  'expat'
  'libx11'
  'libxdamage'
  'libxml2'
  'libxrandr'
  'python-mako'
  'xorgproto'
  'llvm'
)
source=(
