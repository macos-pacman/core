prepare() {
  cd mesa-$pkgver

  patch -Np2 -i ../stat-mtime.patch
}

_libdir=${pacman_root#/}/usr/lib

build() {
  local meson_options=(
    --libdir=/$_libdir
    -D android-libbacktrace=disabled
    -D b_ndebug=true
    -D dri3=enabled
    -D gbm=disabled
    -D egl=disabled
    -D xlib-lease=disabled
    -D gles1=disabled
    -D gles2=enabled
    -D glx=xlib
    -D llvm=enabled
    -D osmesa=true
    -D valgrind=disabled
    -D lmsensors=disabled
    -D shared-glapi=enabled
    -D gallium-vdpau=disabled
    -D gallium-va=disabled
    -D gallium-xa=disabled
    -D microsoft-clc=disabled
    -D spirv-to-dxil=false
    -D video-codecs=vc1dec,h264dec,h264enc,h265dec,h265enc
    -D cpp_rtti=false # our llvm disables rtti
  )

  # Build only minimal debug info to reduce size
  CFLAGS+=' -g1'
  CXXFLAGS+=' -g1'

  arch-meson mesa-$pkgver build "${meson_options[@]}"
  meson configure build # Print config
  meson compile -C build
}

_install() {
  local src f dir
  for src; do
    f="${src#fakeinstall/}"
    dir="${pkgdir}/${f%/*}"
    install -m755 -d "${dir}"
    mv -v "${src}" "${dir}/"
  done
}

package() {
  provides=(
    'mesa-libgl'
    'opengl-driver'
  )
  conflicts=('mesa-libgl')
  replaces=('mesa-libgl')


  # fake installation to be seperated into packages
  # outside of fakeroot but mesa doesn't need to chown/mod
  DESTDIR="$pkgdir" meson install -C build

  install -m644 -Dt "${pkgdir}/${pacman_root}/usr/share/licenses/${pkgname}" LICENSE
}
